{
  "$schema": "https://alirezanet.github.io/Husky.Net/schema.json",
  "tasks": [
    {
      "name": "Format and build",
      "command": "dotnet",
      "group": "pre-commit",
      "args": [ "build" ]
    },
    {
      "name": "Test",
      "command": "dotnet",
      "group": "pre-commit",
      "args": [ "test" ]
    },
    {
      "name": "Refresh index",
      "command": "git",
      "args": [ "update-index", "--again" ]
    }
  ]
}