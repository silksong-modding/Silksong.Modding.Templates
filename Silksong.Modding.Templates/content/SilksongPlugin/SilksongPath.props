  </PropertyGroup>

  <!-- Do not modify - configure the SilksongFolder property instead. -->
  <PropertyGroup>
    <ManagedDir>$(SilksongFolder)/Hollow Knight Silksong_Data/Managed/</ManagedDir>
  </PropertyGroup>
</Project>
